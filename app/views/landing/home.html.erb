<script type="text/javascript">
  $(document).ready(function() {
    console.log("reset_password_popup" + <%= params[:is_reset_password] == '1' %>);
    if(<%= params[:is_reset_password] == '1' %>){
        $("#reset_password_popup").click();
        $(".modal").css({"margin-top": "10%", "z-index": "25000"}); 
        $("#user_reset_password_token").val('<%= params[:reset_password_token] %>');
    }
    
    $('.datepicker').datepicker({dateFormat: "dd-mm-yy", changeMonth: true, changeYear: true, yearRange: 'c-62'});

    $("form#new_user").submit(function() {
      var submit = true;
      var empty_boxes = [];
      $("form#new_user input[type='text']:not('.not_required'), form#new_user input[type='password']").each(function() {
        if ($(this).val() == "") {
          empty_boxes.push($(this).attr('placeholder'));
          submit = false;
        }
      });
      if ($("form#new_user select#user_type_select").val() == "1") {
        if ($("#user_company_name").val() == "") {
          empty_boxes.push('Company Name');
          submit = false;
        }
      }

      if ($("form#new_user select#user_type_select").val() == "Select User Type") {
        empty_boxes.push("User Type");
        submit = false;
      }

      if (submit == false) {
        $("#edit_profile_ajaxloading").css('display', 'none');
        //alert("Please enter " + empty_boxes.join(', ') + " fields...");
        $("#btn_show_err_msg").click();
        $("div#myModalErrorMsg").find(".modal-body").text("Please enter " + empty_boxes.join(', ') + " fields...");
        $(".modal").css({"margin-top": "10%", "z-index": "25000"});
        return false;
      } else {
        if ($("form#new_user .chk_terms_and_cond").is(":checked")) {
          $.ajax({
            type: "POST",
            url: $("form#new_user").attr("action"),
            data: $("form#new_user").serialize(),
            beforeSend: function() {
              $("body").css("cursor", "progress");
            },
            complete: function() {
              $("body").css("cursor", "auto");
            },
            success: function(data) {
              if (data["response"] == "0") {
                if (data["error"]["password"] != "" && data["error"]["password"] != undefined && data["error"]["password"] != null) {
                  //alert("Password " + data["error"]["password"]);
                  $("#btn_show_err_msg").click();
                  $("div#myModalErrorMsg").find(".modal-body").text("Password " + data["error"]["password"]);
                  $(".modal").css({"margin-top": "10%", "z-index": "25000"});
                } else {
                  //alert($("form#new_user #user_email").val() + " " + data["error"]["email"]);
                  $("#btn_show_err_msg").click();
                  $("div#myModalErrorMsg").find(".modal-body").text($("form#new_user #user_email").val() + " " + data["error"]["email"]);
                  $(".modal").css({"margin-top": "10%", "z-index": "25000"});
                }
              } else {
                //alert("Successfully saved.")
                $("#btn_show_err_msg").click();
                $("div#myModalErrorMsg").find(".modal-body").text("You have successfully signed up. Please wait until an admin approves your access.");
                $("div#myModalErrorMsg").find("h4.modal-title").text("Signup Message");
                $(".modal").css({"margin-top": "10%", "z-index": "25000"});
              }
            }
          });
          return false;
        } else {
          $("#btn_show_err_msg").click();
          $("div#myModalErrorMsg").find(".modal-body").text("Please accept terms and condition");
          $(".modal").css({"margin-top": "10%", "z-index": "25000"});
          return false;
        }
      }

    });

    //Login Form submit
    $("form#signin_user").submit(function() {
      var username = $(this).find('#user_email').val();
      var password = $(this).find('#user_password').val();
      if (username == "" || password == "") {
        $("div#login_error").text("Incorrect username or password").css({'font-size': '13px', 'color': 'red'});
        return false;
      } else {
        $.ajax({
          type: "POST",
          url: $(this).attr('action'),
          data: $(this).serialize(),
          beforeSend: function() {
          },
          complete: function() {
          },
          success: function(data) {
            if (data['success'] == true) {
              parent.location.replace(dashboard_path);
            } else {
              //alert(data["errors"]);
              $("#btn_show_err_msg").click();
              console.log(data["errors"]);
              $("div#myModalErrorMsg").find(".modal-body").text(data["errors"][0]);
              $(".modal").css({"margin-top": "10%", "z-index": "25000"});              
            }
          }
        });
        return false;
      }
      return false;
    });
    
    //Forgot password form submit
    $("form#forgot-password-form").submit(function() {
        var ctrl = $(this);
        var user_email = ctrl.find('#user_email').val();
        if(user_email == ""){
            ctrl.find("input#user_email").css({'border' : '1px solid red'});
            return false;
        }else{
            $.ajax({
                type: "POST",
                url: ctrl.attr('action'),
                data: ctrl.serialize(),
                beforeSend: function(){                
                     $("#forgot_password_loading").css("display", "inline-block");
                },
                complete: function() {              
                    $("#forgot_password_loading").css("display", "none");
                },
                success: function(data){
                    if(data['response'] == "1"){
                        $("#forgot_password_msg").html("<b>An email has been sent to the address that you signed up with.</b>").css("color", "green");
                    }else{ 
                        $("#forgot_password_msg").html("<b>We didn't recognize that email, please try again</b>").css("color", "red");
                    }
                }
            });
            return false;
        }

    });   


    //Reset password form submit
    $("form#reset_passord").submit(function() {
      var new_pw = $(this).find('#user_password').val();
      var confirm_pw = $(this).find('#user_password_confirmation').val();
      if (new_pw == "" || confirm_pw == "") {
        $("div#reset_password_msg").text("Password or confirm password can not be empty").css({'font-size': '13px', 'color': 'red'});
        return false;
      }else if(new_pw != confirm_pw){
        $("div#reset_password_msg").text("Password & confirm password does not match").css({'font-size': '13px', 'color': 'red'});
      }else {
        $.ajax({
          type: "POST",
          url: $(this).attr('action'),
          data: $(this).serialize(),
          beforeSend: function() {
          },
          complete: function() {
          },
          success: function(data) {
            if (data['success'] == true) {
              parent.location.replace(dashboard_path);
            } else {
              var error_msg = "";
              $.each(data["errors"], function(k,v){error_msg+=k+" "+v[0]})
              $("div#reset_password_msg").text(error_msg).css({'font-size': '13px', 'color': 'red'});
            }
          }
        });
        return false;
      }
      return false;
    });
  });
</script>        

